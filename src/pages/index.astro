---
import Navbar from '../components/Navbar.astro';
import Redes from '../components/Redes.astro';
---
<html lang="es">
<style>
    .logoServer {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logoContainer {
        text-align: center;
    }

    .logoText {
        margin-left: .8em;
        letter-spacing: 1em;
        font-size: 2em;
        color: rgb(229, 255, 0);
        position: relative;
        overflow: hidden;
        white-space: nowrap;
        -webkit-text-stroke: .5px black;
        font-weight: bold;
    }

    .logoSubtitle {
        letter-spacing: .3em;
        font-size: 1em;
        color: rgb(229, 255, 0);
        white-space: nowrap;
        -webkit-text-stroke: .5px black;
        font-weight: bold;
        margin-top: 1rem;
    }

    @keyframes beat {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.03);
        }
        100% {
            transform: scale(1);
        }
    }

    .animate-beat {
        animation: beat 1.5s infinite;
    }

    .logoSubtitle {
        font-weight: bold;
        font-size: 1rem;
        margin-top: 1rem;
    }

    @media (max-width: 767px) {
        .logoServer {
            min-height: 70vh;
        }

        .logoText {
            font-size: 1.5rem;
        }

        .logoSubtitle {
            font-size: 0.58rem;
            margin-top: 0.5rem;
        }
    }

    @media (min-width: 768px) and (max-width: 1024px) {
        .logoText {
            font-size: 1.8rem;
        }

        .logoSubtitle {
            font-size: 0.8rem;
        }
    }

    @media (min-width: 1025px) and (max-width: 1440px) {
        .logoText {
            font-size: 2rem;
        }

        .logoSubtitle {
            font-size: 0.8rem;
        }
    }

    @media (min-width: 1441px) {
        .logoText {
            font-size: 2.5rem;
        }

        .logoSubtitle {
            font-size: 1.2rem;
        }
    }
</style>
    <head>
        <meta charset="utf-8" />
        <meta name="description" content="Web Oficial de Project W RolePlay" />
        <link rel="icon" type="image/svg+xml" href="/project-w.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>Project W</title>
        <script>
            document.getElementById("conectar-btn").addEventListener("click", function() {
                window.open('fivem://connect/localhost');
            });
        </script>
    </head>
    <body>
        <Navbar />
        <div class="flex mt-12 md:mt-5 items-center justify-center logoServer select-none animate-bounce-fade-in animate-duration-1000">
            <div class="logoContainer">
                <span class="logoText">PROJECT</span>
                <img class="w-80 animate-beat mx-auto" src="/project-w.svg" alt="Project W Logo">
                <span class="logoSubtitle">ROLEPLAY SERIO, EXPERIENCIA DE JUEGO AUTÃ‰NTICA</span>
                <div class="m-auto flex mt-10 items-center justify-center flex-wrap">
                    <a class="tracking-widest text-xs text-yellow-500 font-bold stroke-[5px] stroke-[#000000] -mt-4 md:mt-5 hover:underline" href="/normativa">NORMATIVA</a>
                    <span class="hidden md:flex tracking-widest text-2xl text-yellow-500 font-bold stroke-[5px] stroke-[#000000] ml-10 mr-10 mt-2">|</span>
                    <button class="hidden md:flex ml-10 mt-4 mr-10 bg-orange-600 text-white rounded-2xl font-bold border-yellow-300 p-4 hover:scale-105 hover:shadow-[0_0_35px_-13px_rgba(229,255,0,1)]" id="conectar-btn"><img class="max-w-5 mr-1 drop-shadow-[1px_1px_0_rgba(0,0,0,1)] hover:drop-shadow-[3px_3px_0_rgba(0,0,0,1)]" src="/fivem-logo.svg" alt="FiveM Logo"> CONECTAR AL SERVIDOR</button>
                    <span class="hidden md:flex tracking-widest text-2xl text-yellow-500 font-bold stroke-[5px] stroke-[#000000] ml-10 mr-10 mt-2">|</span>
                    <span class="flex-wrap md:hidden w-full text-center my-2"> <br> </span>
                    <a class="tracking-widest text-xs text-yellow-500 font-bold stroke-[5px] stroke-[#000000] -mt-4 md:mt-5 hover:underline" href="/normativa">CONTACTO</a>
                </div>
            </div>
        </div>
        <Redes />
    </body>
</html>